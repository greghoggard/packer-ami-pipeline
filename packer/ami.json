{
  "variables": {
    "region": "",
    "source_ami": "",
    "ssh_username": "",
    "vpc_id": "",
    "subnet_id": "",
    "kms_key_id": "",
    "git_hash": ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "AMZN-Linux-NGINX-{{timestamp}}",
      "ami_description": "Simple Amazon Linux instance with NGINX installed",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": true,
      "ssh_interface": "public_ip",
      "shutdown_behavior": "terminate",
      "tags": {
        "Name": "AMZN-Linux-NGINX-{{timestamp}}",
        "GIT_HASH": "{{user `git_hash`}}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "cookbooks"
      ],
      "execute_command": "{{if .Sudo}}sudo {{end}}chef-solo --chef-license accept-silent -c {{.ConfigPath}} -j /tmp/node.json",
      "run_list": [
        "nginx"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}