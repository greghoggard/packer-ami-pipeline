{
  "variables": {
    "region": "",
    "source_ami": "",
    "ssh_username": "",
    "vpc_id": "",
    "subnet_id": "",
    "kms_key_id": "",
    "git_hash": ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "AMZN-Linux-NGINX-{{timestamp}}",
      "ami_description": "Simple Amazon Linux instance with Ruby installed",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": true,
      "ssh_interface": "public_ip",
      "shutdown_behavior": "terminate",
      "tags": {
        "Name": "AMZN-Linux-NGINX-{{timestamp}}",
        "GIT_HASH": "{{user `git_hash`}}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "shell-local",
      "command": "ansible-galaxy install -p vendor -r requirements.yml -v -f"
    },
    {
      "type": "ansible",
      "playbook_file": "./playbooks/playbook.yml",
      "extra_arguments": [
        "--extra-vars", "ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}